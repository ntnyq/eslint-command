{
  "publisher": "ntnyq",
  "name": "eslint-command",
  "displayName": "ESLint Command",
  "preview": true,
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "description": "VSCode support for eslint-plugin-command",
  "keywords": [
    "eslint-command"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/eslint-command",
  "repository": {
    "type": "github",
    "url": "https://github.com/ntnyq/eslint-command.git"
  },
  "bugs": {
    "url": "https://github.com/ntnyq/eslint-command/issues/new"
  },
  "main": "./dist/index.js",
  "icon": "./res/logo.png",
  "files": [
    "LICENSE",
    "dist/*",
    "res/*"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "NODE_ENV=development tsdown --watch",
    "generate:meta": "vscode-ext-gen --output src/meta.ts",
    "lint": "eslint",
    "pack": "vsce package --no-dependencies",
    "prepare": "husky",
    "release": "run-s release:check release:version release:publish",
    "release:build": "run-s generate:meta build",
    "release:check": "run-s lint typecheck",
    "release:publish": "vsce publish --no-dependencies",
    "release:version": "bumpp --all --execute='pnpm release:build'",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "pnpm run build"
  },
  "dependencies": {
    "reactive-vscode": "^0.2.19"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^4.3.0",
    "@ntnyq/prettier-config": "^2.2.0",
    "@types/node": "^22.15.29",
    "@types/vscode": "^1.100.0",
    "@vscode/vsce": "^3.4.2",
    "bumpp": "^10.1.1",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^8.0.4",
    "pnpm": "^10.11.0",
    "prettier": "3.5.3",
    "tsdown": "^0.12.6",
    "typescript": "^5.8.3",
    "vscode-ext-gen": "^1.0.2"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "category": "ESLint Command",
        "command": "eslint-command.insert-command",
        "title": "Insert Command"
      }
    ],
    "configuration": {
      "properties": {
        "eslint-command.annotation": {
          "additionalProperties": false,
          "description": "ESLint command annotation",
          "properties": {
            "before": {
              "additionalProperties": false,
              "properties": {
                "contentText": {
                  "default": "ðŸš€",
                  "type": "string"
                },
                "margin": {
                  "default": "0 0.5em 0 0",
                  "type": "string"
                }
              },
              "type": "object"
            },
            "color": {
              "default": "rgb(255, 189, 42)",
              "description": "Color of annotation",
              "format": "color",
              "type": "string"
            },
            "cursor": {
              "default": "pointer",
              "type": "string"
            }
          },
          "type": "object"
        },
        "eslint-command.commands": {
          "default": [],
          "description": "User custom commands",
          "items": {
            "additionalProperties": false,
            "properties": {
              "commentType": {
                "default": "line",
                "description": "command comment type",
                "enum": [
                  "block",
                  "both",
                  "line"
                ],
                "type": "string"
              },
              "description": {
                "description": "command description",
                "type": "string"
              },
              "name": {
                "description": "command name",
                "not": {
                  "enum": [
                    "hoist-regexp",
                    "inline-arrow",
                    "keep-sorted",
                    "keep-unique",
                    "no-shorthand",
                    "no-type",
                    "no-x-above",
                    "regex101",
                    "to-arrow",
                    "to-destructuring",
                    "to-dynamic-import",
                    "to-for-each",
                    "to-for-of",
                    "to-function",
                    "to-one-line",
                    "to-promise-all",
                    "to-string-literal",
                    "to-template-literal",
                    "to-ternary"
                  ],
                  "type": "string"
                },
                "type": "string"
              },
              "triggers": {
                "default": [],
                "description": "command triggers",
                "items": {
                  "description": "command trigger",
                  "type": "string"
                },
                "minItems": 1,
                "type": "array"
              },
              "url": {
                "description": "command docs url",
                "type": "string"
              }
            },
            "required": [
              "description",
              "name",
              "triggers"
            ],
            "type": "object"
          },
          "type": "array"
        },
        "eslint-command.completion": {
          "default": true,
          "description": "Enable completion",
          "type": "boolean"
        },
        "eslint-command.enable": {
          "default": true,
          "description": "Enable extension",
          "type": "boolean"
        },
        "eslint-command.languages": {
          "default": [
            "javascript",
            "javascriptreact",
            "markdown",
            "typescript",
            "typescriptreact"
          ],
          "description": "Languages to enable command decorations",
          "items": {
            "type": "string"
          },
          "type": "array",
          "uniqueItems": true
        }
      },
      "title": "ESLint Command"
    }
  },
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.100.2"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,yml,yaml,json}": "eslint --fix"
  }
}

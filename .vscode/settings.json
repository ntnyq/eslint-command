{
  "oxc.enable": true,
  "eslint.enable": true,
  "prettier.enable": false,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "oxc.oxc-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never",
    "source.sortImports": "never"
  },
  "eslint.validate": [
    "vue",
    "toml",
    "yaml",
    "json",
    "jsonc",
    "json5",
    "markdown",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  "typescript.experimental.useTsgo": true,
  "cSpell.words": [
    "bumpp",
    "changelogithub",
    "esbuild",
    "forof",
    "hreg",
    "npmrc",
    "ofetch",
    "ohash",
    "oxfmt",
    "pnpm",
    "tsdown",
    "tsgo",
    "unrs"
  ],
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "package.json",
        "cmd": "pnpm run generate:meta",
        "isAsync": true
      }
    ]
  }
}
